rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - cho phép tạo và đọc
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Recipes - cho phép đọc, admin mới được ghi
    match /RecipeApp/{recipeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Pending recipes - user tạo, admin xem
    match /recipes_pending/{recipeId} {
      allow read, write: if request.auth != null;
    }
    
    // Tất cả collection khác - chỉ cần đăng nhập
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

